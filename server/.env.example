# Backend Configuration
PORT=5000

# MongoDB Connection String
# Example for local: mongodb://localhost:27017/ultimate-level-game
# Example for Atlas: mongodb+srv://username:password@cluster.mongodb.net/ultimate-level-game
MONGO_URI=mongodb://localhost:27017/ultimate-level-game

# JWT Secret Key
# Use a long, random string in production
JWT_SECRET=your_jwt_secret_key_here_change_in_production

# CORS Configuration
# Set to your frontend URL in production (e.g., https://yourgame.com)
# Use * for development only
CORS_ORIGIN=*
